<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.book.dao.BookDao">

    <resultMap type="Book" id="BookMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="year" column="year" jdbcType="INTEGER"/>
        <result property="doi" column="doi" jdbcType="VARCHAR"/>
        <result property="result" column="result" jdbcType="VARCHAR"/>
        <result property="createtime" column="createTime" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BookMap">
        select
          *
        from book.book
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BookMap">
        select
          *
        from book.book
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BookMap">
        select *
        from book.book
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="author != null and author != ''">
                and author = #{author}
            </if>
            <if test="year != null">
                and year = #{year}
            </if>
            <if test="doi != null and doi != ''">
                and doi = #{doi}
            </if>
            <if test="result != null and result != ''">
                and result = #{result}
            </if>
            <if test="createtime != null and createtime != ''">
                and createTime = #{createtime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into book.book(title, author, year, doi, result, createTime,catalog,price)
        values (#{title}, #{author}, #{year}, #{doi}, #{result}, #{createtime},#{catalog},#{price})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update book.book
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="author != null and author != ''">
                author = #{author},
            </if>
            <if test="year != null">
                year = #{year},
            </if>
            <if test="doi != null and doi != ''">
                doi = #{doi},
            </if>
            <if test="result != null and result != ''">
                result = #{result},
            </if>
            <if test="createtime != null and createtime != ''">
                createTime = #{createtime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from book.book where id = #{id}
    </delete>

    <select id="findByCondition" parameterType="String" resultType="Book">
        select * from book
        <where>
            <if test="con != null and con != ''">
                title = #{con}
                or author=#{con} or year=#{con} or doi=#{con}
            </if>
        </where>
    </select>

    <select id="findByManyCon" parameterType="java.util.Map" resultType="Book">
        select * from book
        <where>
            <if test="time1 != null and time1 != ''">
                and createTime <![CDATA[ >= ]]> #{time1}
            </if>
            <if test="time2 != null and time2 != ''">
                and createTime <![CDATA[ <= ]]> #{time2}
            </if>
            <if test="field != null and field != ''">
                and catalog=#{field}
            </if>
            <if test="operator != null and operator != ''">
                and year=#{operator}
            </if>
            <if test="value != null and value != ''">
                and price=#{value}
            </if>
        </where>
    </select>
</mapper>